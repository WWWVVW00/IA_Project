FROM ultralytics/ultralytics:latest

RUN pip install --upgrade pip && \
    pip install \
    ultralytics \
    flask \
    opencv-python \
    Flask-SocketIO \
    opencv-python && \
    pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu124 && \
    pip install tensorflow

WORKDIR /app

COPY . .

CMD ["python", "app.py"]