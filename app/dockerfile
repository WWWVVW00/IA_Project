FROM python:3.9-slim

WORKDIR /app

COPY . .

RUN apt-get update && \
    apt-get install -y libgl1-mesa-glx && \
    apt-get clean

RUN pip install --upgrade pip && \
    pip install \
    ultralytics \
    flask \
    opencv-python \
    Flask-SocketIO \
    tensorflow \
    numpy \
    Flask-Mail

CMD ["python3", "app.py"]
